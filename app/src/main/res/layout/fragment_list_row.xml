<?xml version="1.0" encoding="utf-8"?>

<!-- Layout di ogni singola riga della lista gestita dal RecyclerView -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <!-- Icona dell'elemento della lista -->

    <ImageView
        android:id="@+id/ic_image_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="16dp"  />

    <!-- LinearLayout contente titolo e breve descrizione -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="72dp">

        <TextView
            android:id="@+id/text_title_item_list"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_description_item_list"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Bottone cliccabile per ulteriori informazioni -->

    <ImageButton
        android:id="@+id/button_ic_info_item_list"
        android:src="@drawable/ic_action_info"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="16dp" />

    <!-- TextView usta per contere le informazioni dell'elemento della lista -->

    <TextView
        android:id="@+id/text_information_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</RelativeLayout>